#include("chipper/src/use-chipper.stanza")
#include("chipper/src/use-tester.stanza")

#use-syntax(core, chipper)

defpackage lfsr16 :
   import core
   import verse
   import chipper

defmodule LFSR16 :
  input inc : UInt<1>
  output out : UInt<16>
  reg res : UInt<16>
  ;; when reset: 
  when inc :
    wire nxt_res = cat(res[0] ^ res[2] ^ res[3] ^ res[5], res[15,1]) 
    res := nxt_res
  out := res

defn main () :
   circuit c : LFSR16()
   println(c)

main()
